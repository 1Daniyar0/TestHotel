<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/secondary_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary_background">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="32dp"
            android:src="@drawable/arrow_left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            style="@style/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Бронирование"
            android:textAlignment="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_card_bc"
        android:paddingHorizontal="12dp"
        android:layout_marginVertical="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/estimate_background"
            android:padding="5dp"
            android:layout_marginVertical="12dp">

            <ImageView
                android:id="@+id/starImage"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/star_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/estimateTv"
                style="@style/estimateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:text="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/starImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/estimateTextTv"
                style="@style/estimateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Превосходно"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/estimateTv"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/hotelName"
            style="@style/subTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steigenberger Makadi"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/cities"
            style="@style/blueText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Madinat"
            android:paddingBottom="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:background="@drawable/custom_card_bc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="12dp">
            <TextView
                style="@style/descriptionSecText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вылет"
                android:layout_gravity="start"
                android:layout_weight="1"/>
            <TextView
                style="@style/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Город"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="12dp">
            <TextView
                style="@style/descriptionSecText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вылет"
                android:layout_gravity="start"
                android:layout_weight="1"/>
            <TextView
                style="@style/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Город"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="12dp">
            <TextView
                style="@style/descriptionSecText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вылет"
                android:layout_gravity="start"
                android:layout_weight="1"/>
            <TextView
                style="@style/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Город"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="12dp">
            <TextView
                style="@style/descriptionSecText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вылет"
                android:layout_gravity="start"
                android:layout_weight="1"/>
            <TextView
                style="@style/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Город"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="12dp">
            <TextView
                style="@style/descriptionSecText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вылет"
                android:layout_gravity="start"
                android:layout_weight="1"/>
            <TextView
                style="@style/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Город"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="12dp">
            <TextView
                style="@style/descriptionSecText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вылет"
                android:layout_gravity="start"
                android:layout_weight="1"/>
            <TextView
                style="@style/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Город"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start">
            <TextView
                style="@style/descriptionSecText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вылет"
                android:layout_gravity="start"
                android:layout_weight="1"/>
            <TextView
                style="@style/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Город"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_card_bc"
        android:padding="12dp">
        <TextView
            style="@style/subTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Информация о покупателе"
            android:layout_marginBottom="12dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                style="@style/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/custom_edit_input"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingHorizontal="12dp"
                android:paddingTop="12dp"
                android:text="Иванов"
                />
            <TextView
                style="@style/editDescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                android:text="Номер телефона"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp">
            <EditText
                style="@style/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/custom_edit_input"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                style="@style/editDescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                android:text="Почта"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/descriptionSecText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Эти данные никому не передаются. После оплаты мы вышли чек на указанный вами номер и почту"
            />




    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/touristRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>